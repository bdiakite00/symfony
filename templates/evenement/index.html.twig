{% extends 'base.html.twig' %}
{% block title %}indexEvenement{% endblock %}

{% block body %}

    <div class="container">
        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th scope="col">nom</th>
                <th scope="col">type</th>
                <th scope="col">ville</th>
                <th scope="col">Statut</th>
                <th scope="col">prix</th>
                <th scope="col">Action</th>

            </tr>
            </thead>
            <tbody>
            <tr>
                {% for ev in evenements %}
                    <td>{{ ev.nom }}</td>
                    <td>{{ ev.type }}</td>
                    <td>{{ ev.ville }}</td>
                    <td>{{ ev.statutEvenement }}</td>
                    <td>{{ ev.prix }}</td>
                    <td><a href="{{ path('evenement_show', {'id': ev.id}) }}">Detail</a>
                    <a href="{{ path('evenement_edit', {'id': ev.id}) }}">editer</a></td>
                {% endfor %}
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
